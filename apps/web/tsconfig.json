{
  "extends": "@modular-app/config/typescript/react",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@modular-app/core": [
        "../../packages/core/src"
      ],
      "@modular-app/core/*": [
        "../../packages/core/src/*"
      ],
      "@modular-app/ui": [
        "../../packages/ui/src"
      ],
      "@modular-app/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@modular-app/config": [
        "../../packages/config/src"
      ],
      "@modular-app/config/*": [
        "../../packages/config/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
