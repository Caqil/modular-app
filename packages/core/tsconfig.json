{
  "extends": "@modular-app/config/typescript/node",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@modular-app/config": ["../config/src"],
      "@modular-app/config/*": ["../config/src/*"]
    },
    "types": ["node", "express", "multer"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}