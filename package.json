{
  "name": "modular-app",
  "private": true,
  "version": "1.0.0",
  "description": "Modular CMS built with Next.js, MongoDB, and Turborepo",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter=@modular-app/web && changeset publish",
    "db:migrate": "node scripts/migration.js",
    "plugin:generate": "node scripts/generate-plugin.js",
    "theme:generate": "node scripts/generate-theme.js",
    "fresh-install": "pnpm clean && rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf apps/*/node_modules && pnpm install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "inquirer": "^9.2.12",
    "prettier": "^3.1.0",
    "turbo": "^1.11.2",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@types/node": "^24.0.1"
  }
}